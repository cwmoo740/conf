general {
    output_format = "i3bar"
    colors = true
    interval = 5
}

order += "wireless wlp58s0"
order += "ethernet _first_"
order += "battery 0"
order += "tztime local"

wireless wlp58s0 {
    format_up = "W: %essid %quality %ip"
    format_down = "W: down"
}

ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = ""
}

