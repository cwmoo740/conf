{
    // *************************************
    // general settings
    "workbench.iconTheme": "material-icon-theme",
    "workbench.panel.location": "right",
    "workbench.colorTheme": "Darcula Theme from IntelliJ",
    "keyboard.dispatch": "keyCode",
    "files.autoSave": "onFocusChange",
    "editor.fontFamily": "'Noto Sans Mono', 'Noto Mono', monospace",
    "editor.rulers": [
        80,
        120
    ],
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        ".cache": true,
        ".mypy_cache": true,
        "**/__pycache__": true
    },
    "explorer.confirmDelete": false,
    // *************************************
    // vim settings
    "vim.useSystemClipboard": true,
    "vim.cmdLineInitialColon": true,
    "vim.searchHighlightColor": "rgba(128, 255, 128, 0.5)",
    // *************************************
    // python settings
    "python.linting.pep8Enabled": true,
    "python.linting.pep8Path": "/opt/anaconda/bin/pep8",
    "python.linting.pylintEnabled": true,
    "python.linting.pylintPath": "/opt/anaconda/bin/pylint",
    "python.linting.mypyEnabled": true,
    "python.linting.mypyPath": "/opt/anaconda/bin/mypy",
    "python.formatting.autopep8Path": "/opt/anaconda/bin/autopep8",
    "python.formatting.autopep8Args": [
        "max-line-length",
        "120"
    ],
    "python.unitTest.pyTestEnabled": true
}